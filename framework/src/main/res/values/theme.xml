<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">?attr/colorPrimary</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="LightActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">?attr/colorPrimary</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="ThemeActivity" parent="@style/Theme.AppCompat.Light.DarkActionBar" />

    <style name="Theme.App" parent="ThemeActivity">
        <item name="android:buttonStyle">@style/Button</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:listSelector">@drawable/standard_selector</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="alertDialogTheme">@style/StyledAlertDialog</item>
    </style>

    <style name="StyledAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">?attr/colorPrimary</item>
    </style>

    <style name="Theme.App.Toolbar" parent="Theme.App">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.App.Toolbar.Translucent" parent="Theme.App.Toolbar">

    </style>

    <style name="Theme.App.Translucent" parent="Theme.App">
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/ActionBar</item>
        <item name="android:windowActionBarOverlay" tools:ignore="NewApi">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>